{
  "name": "stylelint-formatter-github",
  "version": "0.3.2",
  "description": "See stylelint errors and warnings directly in pull requests",
  "license": "MIT",
  "repository": "hipstersmoothie/stylelint-formatter-github",
  "main": "dist/index.js",
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src --ext .ts,.js",
    "release": "auto shipit",
    "lint:example": "stylelint example/test.css --custom-formatter=./dist/index.js"
  },
  "keywords": [
    "stylelint",
    "stylelint-formatter",
    "formatter",
    "reporter",
    "lint",
    "validate",
    "github",
    "annotations",
    "checks"
  ],
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "stylelint": ">= 10"
  },
  "dependencies": {
    "@octokit/rest": "^16.28.7",
    "create-check": "^0.5.0",
    "stylelint-formatter-pretty": "^1.1.2"
  },
  "devDependencies": {
    "@types/eslint": "6.1.1",
    "@types/stylelint": "9.10.1",
    "@typescript-eslint/eslint-plugin": "2.3.2",
    "@typescript-eslint/parser": "2.3.2",
    "auto": "7.6.2",
    "auto-config-hipstersmoothie": "1.0.4",
    "eslint": "6.5.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-config-xo": "0.27.1",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsdoc": "15.12.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.0.7",
    "lint-staged": "9.4.1",
    "prettier": "1.18.2",
    "strip-ansi": "5.2.0",
    "stylelint": "11.0.0",
    "stylelint-config-recommended": "3.0.0",
    "typescript": "3.6.3"
  },
  "ava": {
    "serial": true
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "auto": {
    "extends": "hipstersmoothie"
  }
}
